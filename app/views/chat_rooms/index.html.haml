.website-content
  .container-fluid
    .row
      .col-3
        = react_component("ContactsMenu", { contacts_: current_user.users.map {|x| x}})
      .col-9
        %h1 Chat rooms
        - if user_signed_in?
          %li
            = link_to('Logout', destroy_user_session_path, method: :delete)
        - else
          %li
            = link_to('Login', new_user_session_path)
        %p.lead= link_to 'New chat room', new_chat_room_path, class: 'btn btn-primary'
        %ul
          = render @chat_rooms
