.website-content
  .container
    .row
      .col-xs-12
        %h2.text-center.auth-head-text Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.text_field :username, autofocus: true, class: 'auth-input', id: 'sign-up-username-input', placeholder: 'Username'
          .field
            = f.email_field :email, autocomplete: "email", class: 'auth-input', placeholder: 'Email'
          .field
            = f.password_field :password, autocomplete: "off", class: 'auth-input', id: 'sign-up-pwd-input', placeholder: 'Password'
            - if @minimum_password_length
              .pwd-tooltip-text
                = "#{@minimum_password_length} characters minimum"
          .field
            = f.password_field :password_confirmation, autocomplete: "off", class: 'auth-input', placeholder: 'Password Confirmation'
          .field
            %span.btn.btn-file{id: 'avatar-sign-up-button'}
              %p#p-sign-up-avatar
                %span
                  Choose Avatar
              \#{f.file_field :avatar, id: 'avatar-sign-up'}
          .actions
            = f.submit 'Sign up', class: 'btn btn-default auth-submit'
        .text-center.auth-links
          = render "devise/shared/links"
