.website-content
  .container
    .row
      .col-xs-12
        %h2.text-center.auth-head-text Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.email_field :email, class: 'auth-input', placeholder: 'Email'
          .actions
            = f.submit 'Sign up', class: 'btn btn-default auth-submit'
        .text-center.auth-links
