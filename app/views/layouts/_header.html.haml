%nav.navbar.navbar-expand-lg.navbar-light.bg-light.welcome-navbar-main
  .container
    %i.fa.fa-comment-o.fa-2x
      %span
        = link_to 'Socket Chat', root_path, class: 'navbar-brand header-company-name', title: 'Socket Chat'
    %button.navbar-toggler#header-collapse-button{aria: {controls: :navbarSupportedContent, expanded: false, label: 'Toggle navigation'},
                                                  data: {target: '#navbarSupportedContent', toggle: :collapse}, type: :button}
      %span.navbar-toggler-icon
    .collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item
          %a.nav-link.header-nav-item{:href => "#"} Why Socket Chat?
        %li.nav-item
          %a.nav-link.header-nav-item{:href => "#"} About Us
        %li.nav-item
          %a.nav-link.header-nav-item{:href => "#"} Find Your Workspace
        %li.nav-item.create-wp-nav-item
          = link_to 'Create Workspace', new_user_registration_path, class: 'nav-link header-nav-item'

%ul#navbarSide.navbar-side
  %li.navbar-side-header
    .close-header-navbar-sidebar.mr-4.pb-3
      %i.fa.fa-times-thin.fa-2x
  %li.navbar-side-menu-item.ml-4.mt-5
    Why Socket Chat?
  %li.navbar-side-menu-item.ml-4.mt-4
    About Us
  %li.fixed-bottom.ml-4
    .row.justify-content-center
      .col-xs-12.d-block.d-sm-none.navbar-side-sign-in.mb-5
        %p Sign in
      .d-none.d-sm-block.d-md-block.d-lg-none.mb-5
        %ul.list-inline
          %li.list-inline-item
            = link_to 'Find Your Workspace',  '#', class: 'navbar-side-menu-workspace'
            %span.ml-2.mr-1.text-white
              |
          %li.list-inline-item
            = link_to 'Create Workspace',  new_user_registration_path, class: 'navbar-side-menu-workspace'
